<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Showdetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout
                android:background="#b5bbecf5"
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_single_product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_item_blue"/>
                    <TextView android:textSize="26dp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="bottom|left|center_vertical|center_horizontal|center|start" android:id="@+id/tv_single_product_name" android:paddingLeft="12dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Laptop" android:singleLine="true"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout android:gravity="end" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_single_product_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_edit_single_supptomer"/>
                </LinearLayout>
            </LinearLayout>



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"

                    android:background="@drawable/purchase_newest_outer_back">
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="#" android:layout_weight="0.7"/>
                    <View android:background="@color/black" android:layout_width="1dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Product Name" android:layout_weight="1.6"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Retail Price " android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Whole Price" android:layout_weight="1"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Qty" android:layout_weight="1.2"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="Discount"
                        android:textColor="@color/heading_text_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>

                    <TextView
                        android:layout_width="61dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:text="Scheme 12+1"
                        android:textColor="@color/heading_text_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="City" android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Coupen" android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Extra Discount" android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Extra Discount" android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Extra Discount" android:layout_weight="1.5"/>
                    <View android:background="@color/hint_color" android:layout_width="0.25dp" android:layout_height="match_parent"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/heading_text_color" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:text="Net Amount" android:layout_weight="1.5"/>

                </LinearLayout>


                    <LinearLayout
                        android:layout_width="685dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/pname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.6"
                            android:gravity="center"
                            android:text="Laptop"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/r_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="30000 "
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/w_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="20000"
                            android:textColor="@color/heading_text_color"
                            android:textSize="10dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/qty_show2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/disc"
                            android:layout_width="33dp"
                            android:layout_height="21dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="12 +"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/skm"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />


                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/ctr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="Dubai"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/cpne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="Yes"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/ex1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="3%"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/ex2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/ex3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="10%"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.25dp"
                            android:layout_height="match_parent"
                            android:background="@color/hint_color" />

                        <TextView
                            android:id="@+id/nt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="10000"
                            android:textColor="@color/heading_text_color"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>






        </LinearLayout>
    </ScrollView>
</LinearLayout>